%section
  %h2= link_to @torrent.title, edit_torrent_path(@torrent)
  
  %dl
    %dt Niðurhal
    %dd= link_to ".torrent", torrent_path(@torrent, :format => :torrent)
    %dt Skráð
    %dd= @torrent.created_at
    %dt Tékksumma
    %dd= @torrent.infohash_hex
    %dt Lýsing
    %dd!= markdown(@torrent.description)
    - unless @torrent.fyles.blank?
      %dt Skrár
      %dd
        %table
          %thead
            %tr
              %th Stærð
              %th.expand Skráarnafn
          %tbody
            - @torrent.fyles.oby_path.each do |fyle|
              %tr
                %td.nowrap= number_to_human_size(fyle.size)
                %td= fyle.path
    %dt Innsendandi
    - if @torrent.anonymous
      %dd.italic Nafnlaus
    - else
      %dd= link_to @torrent.user.username, @torrent.user

%section
  %h2 Athugasemdir
