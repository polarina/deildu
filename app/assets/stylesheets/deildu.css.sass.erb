body
  background: #310b28 image-url("main_bg.jpg") top center no-repeat
  font-family: Helvetica, sans-serif
  font-size: 14px

#navigation
  background: image-url("menu_bg.png") no-repeat
  margin: 0 auto
  margin-top: 138px
  margin-bottom: 10px
  width: 970px
  height: 55px
  
  ul
    float: left
    position: relative
    left: 50%
    
    li
      float: left
      position: relative
      right: 50%
      background: image-url("menu_sep.png") no-repeat 0% 50%
      
      &:first-child
        background: none
      
      a
        color: white
        text-transform: uppercase
        display: block
        padding: 0 18px
        line-height: 55px
        height: 55px
        letter-spacing: -1px
        
        &:hover
          color: #666666

#content
  margin: 0 auto
  padding: 20px
  width: 930px
  background: white
  border-radius: 8px
  -moz-border-radius: 8px
  -webkit-border-radius: 8px

#notice
  width: 970px
  margin: 20px auto
  text-align: center
  color: #666666
